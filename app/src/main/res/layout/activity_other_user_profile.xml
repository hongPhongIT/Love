<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/background_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cover_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/default_cover_photo"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/background_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/default_avt"
            app:civ_border_width="3dp"
            app:civ_border_color="#393535"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/background_profile_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/background_profile_image"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textColor="#270566"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Đỗ Phú Khánh"
            />
        <TextView
            android:id="@+id/text_edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:text="(Aoko)"
            android:textAlignment="center"
            android:textColor="#270566"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/background_information_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_profile_name"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/background_edit_infomation_profile"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/background_add_friend"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/icon_add_friend"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_person_add_black_24dp" />

                <TextView
                    android:id="@+id/text_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_add_friend"
                    android:text="Add Friend"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/background_message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_message"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_message_black_24dp" />

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_message"
                    android:text="Mesage
"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/background_more"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_view_more"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_more_horiz_black_24dp" />

                <TextView
                    android:id="@+id/txt_view_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_more"
                    android:text="More"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/background_view_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/background_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BBBBBB"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_introduce"
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="ABOUT"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_picture"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="PHOTOS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_friend"
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="FRIENDS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>